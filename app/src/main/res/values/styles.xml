<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/white</item>                      <!-- 배경 -->
        <item name="android:textColorPrimary">#EFA6C1</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@android:color/black</item>     <!-- 탭바 텍스트 -->
        <item name="colorAccent">#EFA6C1</item>                    <!-- 하단 움직이는 바 색-->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="FilterTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="Text_white_17dp">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Text_black_17dp">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/learnKorean_maintext_color</item>
    </style>

    <style name="Text_black_15dp">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/learnKorean_maintext_color</item>
    </style>

    <style name="Text_black_14dp">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/learnKorean_maintext_color</item>
    </style>

    <style name="Text_black_13dp">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/learnKorean_maintext_color</item>
    </style>

    <style name="Text_black_12dp">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/learnKorean_maintext_color</item>
    </style>

    <style name="Text_black_10dp">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/learnKorean_maintext_color</item>
    </style>


</resources>

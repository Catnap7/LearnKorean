<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <FrameLayout
            android:id="@+id/contentContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="0dp" app:layout_constraintTop_toTopOf="parent"/>



    <com.roughike.bottombar.BottomBar
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:bb_inActiveTabAlpha="0.6"
            android:layout_alignParentBottom="true"
            app:bb_activeTabAlpha="1"
            app:bb_activeTabColor="#332E30"
            app:bb_tabXmlResource="@xml/bottombar_tabs"
            app:layout_constraintBottom_toBottomOf="@+id/contentContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:clipToPadding="false"/>



</android.support.constraint.ConstraintLayout>